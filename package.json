{
  "name": "nbjs-v0",
  "version": "0.0.1",
  "main": "lib/main.js",
  "repository": "https://github.com/wenris/node-babel-jest-startkit",
  "license": "MIT",
  "description": "搭建 Node + Babel7 + Jest 的脚手架，用于开发试验 Node 应用。",
  "author": "Wenris",
  "scripts": {
    "start": "node ./lib/main.js",
    "build": "babel ./src --out-dir ./lib",
    "build:watch": "babel ./src --out-dir ./lib",
    "test": "jest src/",
    "test:watch": "jest --watch src/",
    "esrun": "node -r @babel/register"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/register": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-preset-airbnb": "^3.0.1",
    "chalk": "^2.4.1",
    "jest": "^23.6.0",
    "regenerator-runtime": "^0.13.1"
  }
}
